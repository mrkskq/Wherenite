@model Wherenite.Models.RoleUser

@{
    ViewBag.Title = "AddRoleToUser";
}

<h2 style="margin-bottom: 30px">Додај улога на корисникот</h2>
@using (Html.BeginForm("AddRoleToUser", "Account"))
{
    <div class="form-group" style="margin: 20px; font-size: larger">
        @Html.LabelFor(u => u.Email)
        @Html.TextBoxFor(u => u.Email, new { @class = "form-control transparentBelo" })
    </div>
    <div class="form-group" style="margin: 20px">
        @Html.DropDownListFor(u => u.Role, new SelectList(ViewBag.roles), new { @class = "form-control btn btn-outline-light dropdown-toggle" })
    </div>
    <button type="submit" class="btn btn-light" style="margin: 20px"> Зачувај</button>

}