@model Wherenite.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div style="display: flex; justify-content: center; align-items: center; flex-wrap: wrap; margin: 100px">
    <div style="text-align: center; width: 100%; margin-bottom: 50px">
        <h2 id="title">Регистрација</h2>
    </div>

    <hr />

    <div style="display: flex; justify-content: center; width: 100%; font-size: larger">
        <section id="loginForm" style="width: 50%; display: flex; justify-content: center">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div style="display: flex; justify-content: center; width: 100%">
                    <p style="width: 30%">
                        Е-адреса
                    </p>
                    <div class="col-md-10" style="width:max-content; width: 70%">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div style="display: flex; justify-content: center; width: 100%">
                    <p style="width: 30%">
                        @Html.LabelFor(m => m.Password, "Лозинка", new { @class = "col-md-2 col-form-label" })
                    </p>
                    <div class="col-md-10" style="width:max-content; width: 70%">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div style="display: flex; justify-content: center; width: 100%">
                    <p style="width: 30%">
                        @Html.LabelFor(m => m.ConfirmPassword, "Потврди лозинка", new { @class = "col-md-2 col-form-label" })
                    </p>
                    <div class="col-md-10" style="width:max-content; width: 70%">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>

                <div style="display: flex; justify-content: center; margin-top: 50px">
                    <div class="offset-md-2 col-md-10" style="width: max-content; margin: unset">
                        <input type="submit" value="Регистрирај се" class="btn btn-success btn-lg" />
                    </div>
                </div>


            }
        </section>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}