@model IEnumerable<Wherenite.Models.Venue>

@{
    ViewBag.Title = "Index";
}

<h2 class="belo">Локации</h2>

<p class="belo">
    @Html.ActionLink("Додади локација", "Create", null, new { @class = "btn btn-outline-secondary" })
</p>
<table class="table belo" style="font-size: larger">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VenueType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber3)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VenueType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Address)*@
            <img src="@item.Address" alt="Слика" width="300" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber3)
        </td>
        <td>
            @Html.ActionLink("Промени", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary" }) |
            @Html.ActionLink("Повеќе", "Details", new { id = item.Id }, new { @class = "btn btn-dark" }) |
            @Html.ActionLink("Избриши", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
